#!/usr/bin/env node

const RUN = require('../handlers/run')
const DAEMON = require('../handlers/daemon')
const DMK = require('../handlers/dmk')
const GAZE = require('../handlers/gaze')
const GAZE_HOST = require('../handlers/gaze-host')
const PROVIDENCE = require('../handlers/providence')

require('yargs')
    .usage('$0 <cmd> [args]')
    .command('run <room_id>', 'Capture live', RUN.yargs, RUN.handler)
    .command('daemon <room_id>', 'Monitor idol', DAEMON.yargs, DAEMON.handler)
    .command('dmk <room_id..>', 'Monitor danmaku channel', DMK.yargs, DMK.handler)
    .command('gaze <uid|user..>', 'Gaze for user activity', GAZE.yargs, GAZE.handler)
    .command('gaze-host [room_id..]', 'Gaze for host statistics ', GAZE_HOST.yargs, GAZE_HOST.handler)
    .command('providence', 'Open the providence eyes ', PROVIDENCE.yargs, PROVIDENCE.handler)
    .demandCommand()
    .help()
    .argv
